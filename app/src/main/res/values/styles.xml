<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F8F7F7</item>
        <item name="colorPrimaryDark">#F8F7F7</item>
        <item name="colorAccent">@color/color6</item>
        <item name="android:navigationBarColor">#59000000</item>

        <item name="android:textSelectHandle">@drawable/ic_fselecthandlecenter</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_fselecthandleleft</item>
        <item name="android:textSelectHandleRight">@drawable/ic_fselecthandleright</item>

    </style>

    <style name="Text">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="Text.Primary.Header">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Intro">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Intro.Primary">
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="Intro.Primary.Header">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text.Login">
        <item name="android:textColor">@color/Black</item>
    </style>

    <!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
